{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": [
    "dist",
    "coverage",
    "node_modules"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "lib": [
      "es2022"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@site-config": [
        "src/site.config.ts"
      ],
      "@icons/*": [
        "public/icons/*"
      ]
    }
  }
}